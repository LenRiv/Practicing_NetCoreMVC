@model IEnumerable<VistaControlador.Models.Categoria>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class-"container p-3">
    <div class-"row pt-4">
        <div class="col-6">
            <h2 class="text-warning">Listado de Categorias</h2>
         </div>
        <div class="col-6">
            <a asp-controller="Categoria" asp-action="Crear" class="btn btn-primary">Nueva Categoria</a>
         </div>
    </div>
    <br/>


    @if (Model.Count()>0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nombre 
                    </th>
                    <th>
                        Nº Registro
                    </th>
                    <th>
                       

                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th class="text-primary" width="50%">@item.NombreCategoria</th>
                        <th class="text-success" width="30%">@item.MostrarOrden</th>
                        <th></th>
                    </tr>
                }


            </tbody>


        </table>
    }
    else
    {
        <p>No hay Categorias registradas</p>
    }

</div>
