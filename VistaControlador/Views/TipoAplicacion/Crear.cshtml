@model VistaControlador.Models.TipoAplicacion

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post" asp-action="Crear">

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-success pl-3">Nuevo Tipo Aplicacion</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control"/>
                </div>
            </div>

        </div>

            <br/>
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-warning">Crear</button>
            <a asp-controller="TipoAplicacion" asp-action="Index" class="btn btn-warning">Retroceder</a>
            </div>


        </div>

    </div>

</form>

